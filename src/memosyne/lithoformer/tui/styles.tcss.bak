#root {
    layout: vertical;
    background: #0d1117;
    color: #c9d1d9;
    padding: 0 1;
}

#header {
    padding: 1 0;
    background: #161b22;
    color: #58a6ff;
    text-style: bold;
    border: tall #30363d;
    margin-bottom: 1;
}

#info-row {
    layout: horizontal;
    margin-bottom: 1;
}

#info-left,
#info-right {
    layout: horizontal;
    background: #161b22;
    border: tall #30363d;
    padding: 1;
}

#info-left {
    width: 3fr;
}

#info-right {
    width: 2fr;
    margin-left: 1;
}

.info-box {
    width: 1fr;
    margin-right: 1;
}

.info-box:last-child {
    margin-right: 0;
}

.info-label {
    color: #8b949e;
    padding-bottom: 0;
}

.info-value {
    color: #c9d1d9;
    text-style: bold;
    padding-top: 0;
}

#middle-row {
    layout: horizontal;
    height: 1fr;
    margin-bottom: 1;
}

#table-section {
    width: 6fr;
    background: #161b22;
    border: tall #30363d;
    padding: 1;
}

#question-table {
    height: 1fr;
    border: tall #30363d;
    scrollbar-color: #30363d;
}

#right-column {
    width: 5fr;
    layout: vertical;
    margin-left: 1;
}

#form-and-tree {
    layout: horizontal;
    background: #161b22;
    border: tall #30363d;
    padding: 1;
}

#form-panel {
    width: 2fr;
    layout: vertical;
    padding-right: 1;
}

.form-row {
    layout: vertical;
    margin-bottom: 1;
}

.form-label-box {
    layout: horizontal;
    margin-bottom: 0;
}

.form-label {
    color: #8b949e;
}

.form-hint {
    margin-left: 1;
    text-style: italic;
}

.hint-input {
    color: #58a6ff;
}

.hint-dropdown {
    color: #bc8cff;
}

.hint-auto {
    color: #f0883e;
}

.form-row Input,
.form-row Select {
    background: #0d1117;
    border: solid #30363d;
    color: #c9d1d9;
}

#file-panel {
    width: 3fr;
    layout: vertical;
    background: #0d1117;
    border: tall #30363d;
    padding: 1;
}

#file-tree {
    height: 24;
    border: tall #30363d;
    scrollbar-color: #30363d;
}

#button-panel {
    background: #161b22;
    border: tall #30363d;
    padding: 1;
}

#button-row {
    layout: horizontal;
}

#button-row Button {
    width: 12;
    margin-right: 1;
}

#bottom-row {
    layout: horizontal;
    background: #161b22;
    border: tall #30363d;
    padding: 1;
    height: 18;
    margin-bottom: 1;
}

#log-section {
    width: 6fr;
    layout: vertical;
    padding-right: 1;
}

#log-view {
    height: 1fr;
    background: #0d1117;
    border: tall #30363d;
    scrollbar-color: #30363d;
}

#command-section {
    width: 5fr;
    layout: vertical;
    background: #0d1117;
    border: tall #30363d;
    padding: 1;
}

#command-section Input {
    background: #0d1117;
    border: solid #30363d;
    color: #c9d1d9;
    margin-bottom: 1;
}

#status-message {
    color: #58a6ff;
    padding-bottom: 1;
}

#stats-count,
#stats-time,
#stats-tokens {
    padding-bottom: 1;
}

#progress-section {
    background: #161b22;
    border: tall #30363d;
    padding: 1;
}

#progress-bar {
    height: 1;
}

Button {
    background: #21262d;
    border: solid #30363d;
    color: #c9d1d9;
}

Button.-primary {
    border: solid #1f6feb;
    color: #58a6ff;
}

Button.-error {
    border: solid #da3633;
    color: #f85149;
}

TextLog {
    text-style: bold;
}

#footer {
    display: none;
}

#progress-bar > .bar--background {
    background: #30363d;
}

#progress-bar > .bar--complete {
    background: #238636;
}

#progress-bar > .bar--unfinished {
    background: #30363d;
}

#progress-bar > .bar--cursor {
    background: #58a6ff;
}

.modal-title {
    color: #58a6ff;
    text-style: bold;
    padding-bottom: 1;
}

.modal-text {
    padding-bottom: 1;
}

.modal-actions {
    layout: horizontal;
    align-horizontal: center;
    padding-top: 1;
}

#summary-modal,
#picker-container {
    width: 80;
    background: #161b22;
    border: tall #30363d;
    padding: 2;
}

#picker-tree {
    height: 18;
    border: tall #30363d;
}
